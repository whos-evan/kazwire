  --hat-one hsl(45, 80%, 75%)
  --hat-two hsl(54, 80%, 55%)
  --hat-three hsl(45, 80%, 45%)
  --hat-four hsl(45, 80%, 35%)
  --hat-five hsl(45, 80%, 25%)
